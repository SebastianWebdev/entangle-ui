{
  "testEnvironment": "jsdom",
  "testRegex": "((\\.|/*.)(spec|test))\\.(js|jsx|ts|tsx)$",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.d.ts",
    "!src/**/*.stories.{ts,tsx}"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
